<UserControl x:Class="PersonalTools.Panels.FinancesContent.FinancesToolbar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalTools.Panels.FinancesContent"
             xmlns:fa="http://schemas.fontawesome.com/icons/"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Background="Transparent">
        <Button Background="Transparent" BorderThickness="0" Padding="3px" ToolTip="Movimientos" Click="OpenList_Click">
            <fa:SvgAwesome Icon="Solid_ListAlt" Foreground="LightSlateGray" />
        </Button>
        <Button Background="Transparent" BorderThickness="0" Padding="3px" ToolTip="Configuración" Click="OpenConfiguration_Click">
            <fa:SvgAwesome Icon="Solid_Cog" Foreground="LightSlateGray" />
        </Button>
    </StackPanel>
</UserControl>
