<UserControl x:Class="PersonalToolsDesktop.Containers.FinancesContainer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalToolsDesktop.Containers"
             xmlns:c="clr-namespace:PersonalTools.Panels.FinancesContent"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Background="LightGray">
    <DockPanel Name="container"  VerticalAlignment="Top">
        <c:FinancesToolbar DockPanel.Dock="Top" Height="30" OnListSelected="FinancesToolbar_OnListSelected" OnConfigurationSelected="FinancesToolbar_OnConfigurationSelected" />
        <ContentControl DockPanel.Dock="Bottom" x:Name="contentControl" />
    </DockPanel>
</UserControl>
